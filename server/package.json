{
  "name": "bug-tracker-backend",
  "version": "1.0.0",
  "description": "Production-ready Bug Tracker REST API with comprehensive testing",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage --verbose",
    "test:unit": "jest --testPathPattern=unit --verbose",
    "test:integration": "jest --testPathPattern=integration --verbose",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose --coverage",
    "lint": "eslint src/"
  },
  "keywords": [
    "bug-tracker",
    "rest-api",
    "express",
    "mongodb",
    "jest",
    "testing"
  ],
  "author": "Philip Ondieki",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "express-validator": "^7.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.2",
    "eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
